@using YarpEe.UI.Pages.Shared

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Layout)">
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h1 class="mt-4 text-2xl font-semibold text-gray-900 dark:text-white">Page Not Found</h1>
                <p class="mt-2 text-gray-600 dark:text-gray-400">Sorry, there's nothing at this address.</p>
                <div class="mt-6">
                    <a href="/" class="text-primary-600 hover:text-primary-500">Go back home â†’</a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>


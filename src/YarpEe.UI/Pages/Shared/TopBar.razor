@inject NavigationManager Navigation

<div class="relative z-10 flex-shrink-0 flex h-16 bg-white dark:bg-gray-800 shadow">
    <div class="flex-1 px-4 flex justify-between items-center">
        <div class="flex-1 flex">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
                @GetPageTitle()
            </h2>
        </div>
        <div class="ml-4 flex items-center md:ml-6 space-x-4">
            <!-- Theme toggle placeholder -->
            <button @onclick="ToggleTheme" 
                    class="p-2 rounded-lg text-gray-500 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
            </button>
            
            <!-- Refresh button -->
            <button @onclick="RefreshPage"
                    class="p-2 rounded-lg text-gray-500 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
            </button>
        </div>
    </div>
</div>

@code {
    private string GetPageTitle()
    {
        var path = Navigation.ToBaseRelativePath(Navigation.Uri);
        return path switch
        {
            "" => "Dashboard",
            "routes" => "Routes",
            "clusters" => "Clusters",
            _ => "YARP-EE"
        };
    }

    private void ToggleTheme()
    {
        // Placeholder for theme toggle functionality
    }

    private void RefreshPage()
    {
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}
